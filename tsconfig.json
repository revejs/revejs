{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": [
          "ES6",
          "dom"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true
    },
    "exclude": [
        "node_modules", "dist"
    ]
}